    "enabled": true, // Enable Flux updates
    "updateTypes": ["major", "minor", "patch"], // Allow updates for all version types
    "semanticCommitScope": "Flux Objects"
  },
  
  "ignore": [
    // Add any global ignores here
  ],
  "requiredStatusChecks": null,
}