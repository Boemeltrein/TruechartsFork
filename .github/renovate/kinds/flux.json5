{
      "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "flux": {
    "fileMatch": [
      "(^|/)clusters/.+\\.ya?ml(?:\\.j2)?$",
      "(^|/)repositories/.+\\.ya?ml(?:\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
